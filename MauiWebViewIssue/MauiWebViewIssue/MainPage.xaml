<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiWebViewIssue"
             x:Class="MauiWebViewIssue.MainPage">
        <VerticalStackLayout
            Padding="30,0"
            VerticalOptions="Fill"
            HorizontalOptions="Fill"
            Spacing="25">
                        <Button HeightRequest="50" VerticalOptions="End" HorizontalOptions="Center" Clicked="OnCounterClicked" Text="Load another URL"/>
            <local:CustomWebView x:Name="loadWebView" HorizontalOptions="Fill" VerticalOptions="Fill" Source="https://github.com/letscodewithkalyan/MauiWebViewIssue"/>
        </VerticalStackLayout>
</ContentPage>

